{ 
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["html","css","markdown","Markdown","javascript","javascriptreact","typescript","typescriptreact"],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "diagnostic.errorSign" : "●", 
  "diagnostic.warningSign" : "▲",
  "diagnostic.infoSign": "◆",
  "diagnostic.hintSign": "◇",
  "codeLens.enable" : true,
  "codeLens.separator": "‣",
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.disableMenuShortcut": true,
  "suggest.timeout": 500,
  // Eslint
  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  // Prettier
  "prettier.disableSuccessMessage": true,
  "prettier.eslintIntegration": true,
  // Tsserver
  "tsserver.ignoreLocalTsserver": true,
  "tsserver.formatOnType": true,
  // explorer
  "explorer.width": 28,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "v": "open:vsplit"
  },
  // yank
  "yank.highlight.duration": 100
} 


